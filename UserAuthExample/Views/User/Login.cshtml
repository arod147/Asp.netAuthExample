@model LoginInfo


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Login</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label class="col-form-label" asp-for="Username"></label>
            <input type="text" asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Login</button>
    </div>
</form>
<div class="row">
    <div class=" pt-3 col-6">
        <a asp-controller="User" asp-action="Register" class="btn btn-info mx-3">Register</a>
    </div>
    <div class="pt-3 col-6 text-end">
       <a asp-controller="User" asp-action="ForgotPassword" class="btn btn-info mx-3">Forgot Password ?</a>
    </div>
</div>

@*The client will validate the form.*@
@section Scripts
    {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }